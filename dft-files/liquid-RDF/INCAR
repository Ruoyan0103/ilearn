SYSTEM = cd Ge

! ab initio
ISMEAR = 0        ! Gaussian smearing
SIGMA  = 0.05      ! smearing in eV
ENCUT = 350

LREAL  = Auto     ! projection operators in real space

ALGO   = Normal   !
PREC   = Low      ! precision
ISYM   = 0        ! no symmetry imposed

! MD
IBRION = 0        ! MD (treat ionic degrees of freedom)
NSW    = 12000    ! no of ionic steps
POTIM  = 1.0      ! MD time step in fs

MDALGO = 2        ! Nosé-Hoover thermostat
SMASS  = 1.0      ! Nosé mass

TEBEG  = 1300     ! temperature at beginning
TEEND  = 1300     ! temperature at end
ISIF   = 2        ! update positions; cell shape and volume fixed

NCORE = 12
LASPH = .TRUE.
LCHARG = .FALSE.
LWAVE = .FALSE.

